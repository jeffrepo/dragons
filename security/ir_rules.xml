<odoo>
    <!-- Regla: usuarios normales solo ven lo asignado -->
    <record id="rule_warehouse_by_user" model="ir.rule">
        <field name="name">Warehouses por usuario</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="domain_force">[('id', 'in', user.warehouse_ids.ids)]</field>
    </record>

    <!-- Regla: administradores de inventario ven todo -->
    <record id="rule_warehouse_manager" model="ir.rule">
        <field name="name">Warehouses para administradores</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field> <!-- siempre True -->
    </record>

    <record id="rule_warehouse_by_user" model="ir.rule">
        <field name="name">Location por usuario</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="domain_force">[('id', 'in', user.location_ids.ids)]</field>
    </record>

    <!-- Regla: administradores de inventario ven todo -->
    <record id="rule_warehouse_manager" model="ir.rule">
        <field name="name">Location para administradores</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field> <!-- siempre True -->
    </record>
</odoo>
