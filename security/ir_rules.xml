<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Regla para almacenes -->
        <record id="rule_warehouse_user" model="ir.rule">
            <field name="name">Acceso a almacenes permitidos</field>
            <field name="model_id" ref="stock.model_stock_warehouse"/>
            <field name="groups" eval="[]"/>
            <field name="domain_force">[
                ('id', 'in', user.warehouse_ids.ids)
            ]</field>
        </record>

        <!-- Regla para ubicaciones -->
        <record id="rule_location_user" model="ir.rule">
            <field name="name">Acceso a ubicaciones permitidas</field>
            <field name="model_id" ref="stock.model_stock_location"/>
            <field name="groups" eval="[]"/>
            <field name="domain_force">[
                ('id', 'in', user.location_ids.ids)
            ]</field>
        </record>


    </data>
</odoo>
