<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dragons_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">dragons.account.journal.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="country_code" position="after">
                <field name="limit"/>
            </field>
        </field>
    </record>

    <record id="rule_cash_journal_user" model="ir.rule">
        <field name="name">Acceso a diarios de efectivo permitidos</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="groups" eval="[]"/>
        <field name="domain_force">[
            '|',
            ('type', '!=', 'cash'),
            ('id', 'in', user.cash_diaries_ids.ids)
        ]</field>
    </record>
</odoo>