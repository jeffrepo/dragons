<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="dragons_view_account_payment_form" model="ir.ui.view">
            <field name="name">dragons.account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <button name="action_validate" position="after">
                    <button name="autorizar_grupo1" string="Autorizar" type="object" class="oe_highlight" invisible="payment_type != 'outbound'" groups="dragons.group_dragon_1" groupsdata-hotkey="a"/>
                    <button name="autorizar_grupo2" string="Autorizar" groups="dragons.group_dragon_2" type="object" class="oe_highlight"
                            invisible="estado_autorizado != 'grupo1' and payment_type != 'outbound'" data-hotkey="a"/>
                    <button name="autorizar_grupo3" string="Autorizar" groups="dragons.group_dragon_3" type="object" class="oe_highlight"
                            invisible="estado_autorizado != 'grupo2' and payment_type != 'outbound'" data-hotkey="a"/>
                </button>
            </field>

        </record>

    </data>
</odoo>
